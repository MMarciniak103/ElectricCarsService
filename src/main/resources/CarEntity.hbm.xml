<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="CarEntity" table="vehicles">
        <id name="id" type="int" column="id">
            <generator class="assigned"></generator>  <!-- automatyczna generacja klucza glownego -->
        </id>

        <property name="name" column="name"></property> <!-- mapowanie atrybutu z kolumna w bazie -->
        <property name="platesNumber" column="plates_number"></property>
        <property name="rangeKM" column="range_km"></property>
        <property name="batteryLvlPct" column="battery_lvl_pct"></property>
        <property name="address" column="address"></property>
        <property name="latitude" column="latitude"></property>
        <property name="longitude" column="longitude"></property>
        <property name="status" column="status"></property>
        <property name="insurancePeriod" column="insurance_period"></property>
        <property name="batteryDistance" column="battery_distance"></property>
        <property name="damageDescription" column="damage_description"></property>

        <set name="transactions" table="transactions"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="car_id" not-null="true"/>
            </key>
            <one-to-many class="TransactionEntity"/>
        </set>

    </class>

</hibernate-mapping>
