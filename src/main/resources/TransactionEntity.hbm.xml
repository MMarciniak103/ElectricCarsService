<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="TransactionEntity" table="transactions">
        <id name="id" type="int" column="id">
            <generator class="assigned"></generator>  <!-- automatyczna generacja klucza glownego -->
        </id>

        <property name="data" column="date"></property> <!-- mapowanie atrybutu z kolumna w bazie -->
        <property name="client_id" column="client_id"></property> <!-- mapowanie atrybutu z kolumna w bazie -->
        <property name="car_id" column="car_id"></property> <!-- mapowanie atrybutu z kolumna w bazie -->
        <property name="completed" column="completed"></property> <!-- mapowanie atrybutu z kolumna w bazie -->

    </class>

</hibernate-mapping>
