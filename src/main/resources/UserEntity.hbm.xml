<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="UserEntity" table="users">
        <id name="id" type="int" column="id">
            <generator class="assigned"></generator>  <!-- automatyczna generacja klucza glownego -->
        </id>

        <property name="login" column="login"></property> <!-- mapowanie atrybutu z kolumna w bazie -->
        <property name="password" column="pswd"></property>
        <property name="role" column="role">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">UserEntity.Role</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <set name="transactions" table="transactions"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="client_id" not-null="true"/>
            </key>
            <one-to-many class="TransactionEntity"/>
        </set>

    </class>

</hibernate-mapping>

        <!-- mapping types
        https://www.tutorialspoint.com/hibernate/hibernate_mapping_types.htm
        -->
